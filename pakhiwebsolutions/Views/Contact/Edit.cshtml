@model ContactEditViewModel
@{
    ViewBag.Title = "Edit Contact Us";
    ViewBag.Description = "";
    var docPath = "~/files/" + (Model.ExistingDocPath ?? "noimage.jpg");
}
    <form enctype="multipart/form-data" asp-controller="Contact" asp-action="edit" method="post" class="mt-3">
        <div asp-validation-summary="All" class="text-danger"></div>
        <input hidden asp-for="ContactId" />
        <input hidden asp-for="ExistingDocPath" />
        <div class="form-group row">
            <label asp-for="FullName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="FullName" class="form-control" placeholder="Full Name *" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="PhoneNo" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="PhoneNo" class="form-control" placeholder="Phone / Mobile Number *" />
                <span asp-validation-for="PhoneNo" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="EmailId" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="EmailId" class="form-control" placeholder="Email Id *" />
                <span asp-validation-for="EmailId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="CompanyName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="CompanyName" class="form-control" placeholder="Company Name" />
                <span asp-validation-for="CompanyName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="RequirementDescription" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <textarea asp-for="RequirementDescription" rows="3" class="form-control" placeholder="Requirement Description"></textarea>
                <span asp-validation-for="RequirementDescription" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="DocPath" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <div class="custom-file">
                    <input asp-for="DocPath" class="form-control custom-file-input" />
                    <label class="custom-file-label">Click here to change file</label>
                </div>
            </div>
        </div>
        <div class="form-group row col-sm-4 offset-4">
            <img class="imageThumbnail" src="@docPath" asp-append-version="true" />
        </div>


        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Update</button>
                <a asp-action="Index" asp-controller="Contact" class="btn btn-primary">Cancel</a>
            </div>
        </div>
        @*This script is required to display the selected file in the file upload element*@
        @section Scripts{
            <script>
                $(document).ready(function () {
                    $('.custom-file-input').on("change", function () {
                        var fileName = $(this).val().split("\\").pop();
                        $(this).next('.custom-file-label').html(fileName);
                    });
                });
            </script>
        }
    </form>
